@model Highland.Models.Cart

@{
    ViewBag.Title = "ShowCart";
    Layout = "~/Views/Shared/_BuyCart.cshtml";
}

<link rel="stylesheet" as="style" type="text/css" href="//bizweb.dktcdn.net/100/465/740/themes/884110/assets/bootstrap.css?1700130164665" onload="this.rel='stylesheet'">
<link rel="stylesheet" as="style" type="text/css" href="//bizweb.dktcdn.net/100/465/740/themes/884110/assets/evo-main.scss.css?1700130164665" onload="this.rel='stylesheet'">
<link href="//bizweb.dktcdn.net/100/465/740/themes/884110/assets/evo-carts.scss.css?1700130164665" rel="stylesheet" type="text/css" media="all">

@if (Model != null)
{

<div class="container white collections-container">
    <div class="row">
        <div class="col-lg-9">
            <div class="shopping-cart">
                <div class="d-none d-lg-block d-xl-block">
                    <div class="shopping-cart-table">
                        <h1 class="lbl-shopping-cart lbl-shopping-cart-gio-hang">Giỏ hàng <span>(<span class="count_item_pr hascart">1</span> sản phẩm)</span></h1>

                        <div class="col-main cart_desktop_page cart-page">
                            <form id="shopping-cart" action="/cart" method="post" novalidate="" class="has-validation-callback">
                                <div class="cart page_cart cart_des_page hidden-xs-down row">
                                    @*sản phẩm*@

                                    @foreach(var item in Model.Items)
                                    {
                                        decimal total = item._quantity * (decimal)item._product.PriceProduct.Value;

                                        <div class="col-lg-12 cart-col-1">
                                            <div class="cart-tbody">
                                                <div class="row shopping-cart-item productid-91222684">
                                                    @*hình sản phẩm*@
                                                    <div class="col-lg-3 img-thumnail-custom">
                                                        <p class="image">
                                                            <a href="#" title="[TẶNG TÚI HIGHLANDS COFFEE-màu ngẫu nhiên] Cà Phê Bột Truyền Thống Highlands Coffee 1KG" target="_blank">
                                                                <img class="img-responsive" src="@Url.Content(item._product.imageProduct1)" alt="[TẶNG TÚI HIGHLANDS COFFEE-màu ngẫu nhiên] Cà Phê Bột Truyền Thống Highlands Coffee 1KG">
                                                            </a>
                                                        </p>
                                                    </div>

                                                    @*thông tin*@
                                                    <div class="col-right col-lg-9">
                                                        <div class="box-info-product">
                                                            <p class="name">
                                                                <a href="#" title="[TẶNG TÚI HIGHLANDS COFFEE-màu ngẫu nhiên] Cà Phê Bột Truyền Thống Highlands Coffee 1KG" target="_blank">@Html.DisplayFor(model => item._product.NameProduct)</a>
                                                            </p>

                                                            <p class="c-brands">Thương hiệu: Highlands Coffee</p>
                                                            <p class="seller-by d-none" style="display: none;">Default Title</p>

                                                            <p class="action">
                                                                <a href="/ShoppingCart/RemoveCart/@item._product.ID" class="btn btn-link btn-item-delete remove-item-cart" data-id="91222684" title="Xóa">Xóa</a>
                                                            </p>

                                                        </div>

                                                        <div class="box-price">
                                                            <p class="price pricechange">@Html.DisplayFor(model => item._product.PriceProduct).000₫</p>
                                                        </div>

                                                        <div class="quantity-block">
                                                            <div class="bootstrap-touchspin">
                                                                <div class="input-group-btn">
                                                                    <input class="variantID" type="hidden" name="variantId" value="91222684">
                                                                    <button onclick="var result = document.getElementById('qtyItem91222684'); var qtyItem91222684 = result.value; if( !isNaN( qtyItem91222684 )) result.value++;return false;" class="increase_pop items-count btn-plus btn btn-default bootstrap-touchspin-up" type="button">+</button>
                                                                    <input type="text" onchange="if(this.value == 0)this.value=1;" maxlength="12" min="1" disabled="" class="form-control quantity-r2 quantity js-quantity-product input-text number-sidebar input_pop input_pop qtyItem91222684" id="qtyItem91222684" name="Lines" size="4" value="1">
                                                                    <button onclick="var result = document.getElementById('qtyItem91222684'); var qtyItem91222684 = result.value; if( !isNaN( qtyItem91222684 ) &amp;&amp; qtyItem91222684 > 1 ) result.value--;return false;" disabled="" class="reduced_pop items-count btn-minus btn btn-default bootstrap-touchspin-down" type="button">–</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    

                                    @*thanh toán*@
                                    <div class="col-lg-12 cart-col-2 cart-collaterals cart_submit">
                                        <div id="right-affix">
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <a class="btn-proceed-checkout btn-checkouts" title="Tiếp tục mua hàng" href="@Url.Action("Index","Shopping")">Tiếp tục mua hàng</a>
                                                </div>

                                                <div class="col-lg-6">
                                                    <div class="each-row">
                                                        <div class="box-style fee">
                                                            <p class="list-info-price">
                                                                <span>Tạm tính: </span>
                                                                <strong class="totals_price price _text-right text_color_right1">@Model.Total_money().000₫</strong>
                                                            </p>
                                                        </div>

                                                        <div class="box-style fee d-none">
                                                            <p class="list-info-price">
                                                                <span>Giảm giá: </span>
                                                                <strong class="discounted price _text-right text_color_right1" id="price_sale" data-price="0"></strong>
                                                            </p>
                                                        </div>

                                                        <div class="box-style fee">
                                                            <div class="total2 clearfix">
                                                                <span class="text-label">Thành tiền: </span>
                                                                <div class="amount">
                                                                    <p>
                                                                        <strong class="totals_price">@Model.Total_money().000₫</strong>
                                                                    </p>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        @*<button class="button btn btn-large btn-block btn-danger btn-checkout evo-button" title="Thanh toán ngay" type="button">
                                                            <a href="@Url.Action("CheckOut","CheckOut")">Thanh toán ngay</a>
                                                        </button>*@
                                                    </div>
                                                </div>

                                                @*<div class="main">*@

                                                    
                                                @*</div>*@
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        @*Giới thiệu - Quảng Cáo*@
       
        <div class="col-lg-3">
            <div class="side-module block">
                <div class="content-asset">
                    <div class="service-module service-closed">
                        @using (Html.BeginForm("CheckOut", "ShoppingCart"))
                        {
                            <div class="container">

                                <div class="heading">
                                    <h1>Payment details</h1>
                                </div>

                                @*<label for="name">Name</label>
                                <input type="text" id="name" name="NameCustomer" required>*@
                                <br>
                                <label for="card">Address</label>
                                <input type="text" id="card" name="AddressCustomer" required>
                                <br>
                                <div class="exp-cvc">
                                    @*<div class="expiration">
                                        <label for="expiry">Phone</label>
                                        <input class="inputCard" name="PhoneNumber" id="expiry" type="number" required>
                                        <br>
                                    </div>*@
                                    @*<div class="security">
                                        <label for="cvc">CVC</label>
                                        <input type="text" id="cvc" name="cvc" placeholder="XXX">
                                        <br>
                                    </div>*@
                                </div>
                                <div class="btn">

